---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const today = new Date();
---

<footer>
	<div class="container">
		<p>&copy; {today.getFullYear()} {t('footer.rights')}</p>
	</div>
</footer>

<style>
	footer {
		padding: 2rem 0;
		margin-top: 4rem;
		border-top: 1px solid var(--color-border);
		color: var(--color-text);
		font-size: 0.9rem;
	}

	.container {
		display: flex;
		justify-content: center; /* Center the copyright since links are gone */
		align-items: center;
		flex-wrap: wrap;
		gap: 1rem;
	}

</style>
