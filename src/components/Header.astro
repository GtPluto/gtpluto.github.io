<header class="site-header">
	<div class="container">
		<nav>
			<a href="/" class="logo">ZhouHD</a>
			<div class="nav-links">
				<a href="/ideas">Ideas</a>
				<a href="/notes">Notes</a>
				<a href="/projects">Projects</a>
				<a href="/about">About</a>
			</div>
		</nav>
	</div>
</header>

<style>
	.site-header {
		height: var(--header-height);
		display: flex;
		align-items: center;
		border-bottom: 1px solid var(--color-border);
		position: sticky;
		top: 0;
		background-color: var(--color-bg); /* Ensure it's not transparent on scroll */
		z-index: 10;
	}

	nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.logo {
		font-family: var(--font-heading);
		font-weight: bold;
		font-size: 1.5rem;
		color: var(--color-primary);
		text-decoration: none;
	}

	.nav-links {
		display: flex;
		gap: 1.5rem;
	}

	.nav-links a {
		color: var(--color-text);
		font-weight: 500;
	}

	.nav-links a:hover {
		color: var(--color-accent);
		text-decoration: none;
	}
</style>
