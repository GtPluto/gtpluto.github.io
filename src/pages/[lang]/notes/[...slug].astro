---
import { type CollectionEntry, getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { languages } from '../../../i18n/ui';

export async function getStaticPaths() {
	const posts = await getCollection('notes');
	const paths = [];
	
	// Filter for non-English posts
	const nonEnPosts = posts.filter(post => !post.slug.startsWith('en/'));

	for (const post of nonEnPosts) {
		const [lang, ...slugParts] = post.slug.split('/');
		if (lang in languages && lang !== 'en') {
			paths.push({
				params: { lang, slug: slugParts.join('/') },
				props: post,
			});
		}
	}
	return paths;
}
type Props = CollectionEntry<'notes'>;

const post = Astro.props;
const { Content } = await post.render();
---

<BaseLayout title={post.data.title} description={post.data.description}>
	<div class="note-layout">
		<aside class="toc-sidebar">
			<!-- Future: Table of Contents -->
			<div class="sticky-content">
				<a href={`/${Astro.params.lang}/notes`} class="back-link">&larr; Back to Notes</a>
			</div>
		</aside>
		
		<article class="note-content">
			<header>
				<h1>{post.data.title}</h1>
				<div class="meta">
					<time datetime={post.data.pubDate.toISOString()}>
						Last updated: {post.data.pubDate.toLocaleDateString('zh-CN')}
					</time>
				</div>
				{post.data.tags && (
					<div class="tags">
						{post.data.tags.map(tag => <span class="tag">{tag}</span>)}
					</div>
				)}
			</header>
			<div class="content">
				<Content />
			</div>
		</article>
	</div>
</BaseLayout>

<style>
	.note-layout {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
	}

	@media (min-width: 768px) {
		.note-layout {
			grid-template-columns: 200px 1fr;
		}
	}

	.sticky-content {
		position: sticky;
		top: calc(var(--header-height) + 2rem);
	}

	.back-link {
		display: inline-block;
		margin-bottom: 1rem;
		font-size: 0.9rem;
		color: var(--color-accent);
	}

	.note-content {
		max-width: 100%;
	}

	header {
		margin-bottom: 2rem;
		padding-bottom: 1rem;
		border-bottom: 1px solid var(--color-border);
	}

	h1 {
		font-size: 2rem;
		margin-bottom: 0.5rem;
	}

	.meta {
		font-size: 0.85rem;
		opacity: 0.7;
		margin-bottom: 1rem;
	}

	.tags {
		display: flex;
		gap: 0.5rem;
	}

	.tag {
		font-size: 0.75rem;
		padding: 0.2rem 0.5rem;
		background-color: var(--color-bg-code);
		border-radius: 4px;
	}

	.content {
		line-height: 1.7;
	}

	/* Markdown Content Styles (Similar to Ideas but maybe more compact) */
	.content :global(h2) { margin-top: 2rem; font-size: 1.5rem; }
	.content :global(h3) { margin-top: 1.5rem; font-size: 1.25rem; }
	.content :global(p) { margin-bottom: 1rem; }
	.content :global(pre) { 
		padding: 1rem; 
		border-radius: 6px; 
		background-color: var(--color-bg-code);
		overflow-x: auto;
		margin-bottom: 1rem;
		font-size: 0.9rem;
	}
</style>
